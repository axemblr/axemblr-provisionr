
#
# Make sure only a single user can access the machines over ssh
#

user { "{{user}}":
  groups => ['adm','dialout','cdrom', 'floppy','audio','dip','video','plugdev','netdev','admin','sudo'],
  ensure => 'present',
  managehome => 'true',
  shell => '/bin/bash',
  membership => 'inclusive',
  system => 'false'
}
  
file { "/home/{{user}}/.ssh":
	ensure => 'directory',
	require => User['{{user}}'],
	owner => '{{user}}',
	mode => '700'
}

ssh_authorized_key { '{{user}}-rsa-key':
	ensure => 'present',
	key => '{{publicKey}}',
	type => 'rsa',
	user => '{{user}}',
	require => File['/home/{{user}}/.ssh']
}  
  
file { "/etc/ssh/sshd_config":
  owner => "root",
  group => "root",
  mode => 644,
  replace => "true",
  notify => Service["ssh"],
  require => Package["openssh-server"],
  source => "/tmp/sshd_config"
}

file { "/etc/sudoers":
  owner => "root",
  group => "root",
  mode => 440,
  replace => "true",
  source => "/tmp/sudoers"
}

package { "openssh-server":
  ensure => installed
}

service { "ssh":
  ensure => running,
  provider => 'upstart',
  hasrestart => 'true',
  hasstatus  => 'true',
  require => [
    File["/etc/ssh/sshd_config"],
    Package["openssh-server"]
  ]
}
