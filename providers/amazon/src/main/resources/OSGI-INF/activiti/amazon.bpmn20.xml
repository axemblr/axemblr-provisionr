<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             targetNamespace="http://www.bpmnwithactiviti.org"
             xmlns:activiti="http://activiti.org/bpmn">

    <process id="amazon" name="Amazon Process" isExecutable="true">
        <startEvent id="start"/>
        <endEvent id="end"/>

        <serviceTask id="ensureSecurityGroupExists" name="Ensure Security Group Exists"
                     activiti:delegateExpression="${amazon_ensureSecurityGroupExists}"
                     activiti:async="true"/>

        <serviceTask id="deleteSecurityGroup" name="Delete Security Group"
                     activiti:delegateExpression="${amazon_deleteSecurityGroup}"
                     activiti:async="true"/>

        <sequenceFlow sourceRef="start" targetRef="ensureSecurityGroupExists"/>
        <sequenceFlow sourceRef="ensureSecurityGroupExists" targetRef="deleteSecurityGroup"/>
        <sequenceFlow sourceRef="deleteSecurityGroup" targetRef="end"/>
    </process>
</definitions>
