<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             targetNamespace="http://www.bpmnwithactiviti.org"
             xmlns:activiti="http://activiti.org/bpmn">

    <process id="cloudstack" name="CloudStack Process" isExecutable="true">
        <startEvent id="start"/>
        <endEvent id="end"/>

        <serviceTask id="createSecurityGroup" name="Create Security Group"
                     activiti:delegateExpression="${cloudstack_createSecurityGroup}"
                     activiti:async="true"/>
        <serviceTask id="deleteSecurityGroup" name="Delete Security group"
                     activiti:delegateExpression="${cloudstack_deleteSecurityGroup}"
                     activiti:async="true"/>

        <sequenceFlow sourceRef="start" targetRef="createSecurityGroup"/>
        <sequenceFlow sourceRef="createSecurityGroup" targetRef="deleteSecurityGroup"/>
        <sequenceFlow sourceRef="deleteSecurityGroup" targetRef="end"/>
    </process>
</definitions>
